{
  "name": "@hyper-h/embedded",
  "version": "0.0.1-alpha.1",
  "description": "Local smart home server.",
  "author": "Desionlab <support@desionlab.net> (http://desionlab.net/)",
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "hhe": "./dist/apps/cli/main.js"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/worker/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/bull": "0.0.1-beta.4",
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "0.0.9",
    "@nestjs/core": "^6.10.14",
    "@nestjs/mongoose": "^6.2.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/platform-socket.io": "^6.10.14",
    "@nestjs/serve-static": "^1.0.2",
    "@nestjs/swagger": "^4.1.12",
    "@nestjs/websockets": "^6.10.14",
    "bull": "^3.12.1",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "mongoose": "^5.8.7",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-hidden": "^1.8.1",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.0",
    "@nestjs/schematics": "^6.8.2",
    "@nestjs/testing": "^6.10.14",
    "@types/bull": "^3.12.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.7.5",
    "@types/passport-http-bearer": "^1.0.34",
    "@types/passport-local": "^1.0.33",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@hyper-h/console/(.*)": "<rootDir>/libs/console/src/$1",
      "@hyper-h/console": "<rootDir>/libs/console/src",
      "@hyper-h/account/(.*)": "<rootDir>/libs/account/src/$1",
      "@hyper-h/account": "<rootDir>/libs/account/src",
      "@hyper-h/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@hyper-h/database": "<rootDir>/libs/database/src"
    }
  }
}
